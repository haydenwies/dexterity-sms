{
	"$schema": "https://turborepo.com/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"env": [
				"APP_ENV",
				"PORT",
				"BACKEND_PRIVATE_URL",
				"BACKEND_PUBLIC_URL",
				"NEXT_PUBLIC_BACKEND_PUBLIC_URL",
				"WEB_PUBLIC_URL",
				"NEXT_PUBLIC_WEB_PUBLIC_URL",
				"DATABASE_URL",
				"REDIS_URL",
				"STRIPE_API_KEY",
				"STRIPE_WEBHOOK_SECRET",
				"STRIPE_SENDER_PRICE_ID",
				"STRIPE_SENDER_REMOVAL_PRICE_ID",
				"STRIPE_SMS_CREDIT_PRICE_ID",
				"STRIPE_SMS_CREDIT_METER_ID",
				"TWILIO_ACCOUNT_SID",
				"TWILIO_AUTH_TOKEN",
				"RESEND_API_KEY",
				"RESEND_FROM"
			],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**"]
		},
		"format": {
			"dependsOn": ["^format"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		}
	}
}
